<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="25.0sp" android:layout_marginTop="25.0sp">
        <TextView android:textSize="30.0sp" android:textStyle="bold" android:textColor="#ffffff00" android:background="#ff0000ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/name" />
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25.0sp">
            <TextView android:textSize="25.0sp" android:textColor="#ffff00ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/username" />
            <EditText android:textSize="25.0sp" android:id="@+id/userField" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/username_field" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25.0sp">
            <TextView android:textSize="25.0sp" android:textColor="#ff00ff00" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/password" />
            <EditText android:textSize="25.0sp" android:id="@+id/passField" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/password_field" android:inputType="textPassword" />
        </LinearLayout>
        <Button android:textSize="30.0sp" android:textStyle="bold" android:textColor="#ffff00ff" android:id="@+id/userButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25.0sp" android:text="@string/username" />
        <Button android:textSize="30.0sp" android:textStyle="bold" android:textColor="#ff00ff00" android:id="@+id/passButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25.0sp" android:text="@string/password" />
        <Button android:textSize="30.0sp" android:textStyle="bold" android:textColor="#ffff0000" android:id="@+id/userPassButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25.0sp" android:text="@string/user_pass" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>